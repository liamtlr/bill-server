<div class="container">

  <div class="row">
    <div class="col-md-12"> <h3>Billing period</h2> </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <table class="table table-hover">
        <tbody>
            <tr>
              <th>Generated on: </th>
                <td> <%= @bill.generated %> </td>
            </tr>
            <tr>
              <th>Due By:</th>
                <td> <%= @bill.due_date %> </td>
            </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <table class="table table-hover">
        <tbody>
            <tr>
              <th>From: </th>
                <td> <%= @bill.billing_period["from"] %> </td>
            </tr>
            <tr>
              <th>To:</th>
                <td> <%= @bill.billing_period["to"] %> </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  
</div>
