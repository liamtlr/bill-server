<div class="container">

  <div class="row">
    <div class="col-md-4">
      <h3>Call charges</h3>
    </div>
    <div class="col-md-4">
      <h4> <%= @bill.call_charges.count %> calls made
    </div>
    <div class="col-md-4">
      <a href="#" class="btn btn-primary btn-lg active" id="show-more" role="button" aria-pressed="true">Show more</a>
      <a href="#" class="btn btn-primary btn-lg active" id="show-less" role="button" aria-pressed="true">Show less</a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover" id="call-charge-details">
        <thead>
          <tr>
            <th>Called</th>
            <th>Duration</th>
            <th>Cost</th>
          </tr>
        </thead>
        <tbody>
          <% @bill.call_charges.each do |call| %>
          <tr>
            <td><%= call["called"] %></td>
            <td><%= call["duration"] %></td>
            <td>£<%= "%.02f" % call["cost"] %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8"></div>
    <div class="col-md-4" id="call-charges-total">
      <table class="table table-hover">
        <tbody>
          <tr>
            <th><h4>Subtotal:</h4></th>
              <td><h4>£<%= @bill.call_charges_total %> </h4></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  
</div>
