<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Bill</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="stylesheet.css">
  </head>

  <body>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img class="img-fluid" src="sky_logo.png">
    </div>
    <div class="col-md-6">
      <table class="table table-hover" id="bill-total">
        <tbody>
            <tr>
              <th><h2>Amount due:</h2> </th>
                <td><h2> £<%= @bill.total %> </h2></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12"> <h3>Billing period</h2> </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table class="table table-hover">
        <tbody>
            <tr>
              <th>Generated on: </th>
                <td> <%= @bill.generated %> </td>
            </tr>
            <tr>
              <th>Due By:</th>
                <td> <%= @bill.due_date %> </td>
            </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <table class="table table-hover">
        <tbody>
            <tr>
              <th>From: </th>
                <td> <%= @bill.billing_period["from"] %> </td>
            </tr>
            <tr>
              <th>To:</th>
                <td> <%= @bill.billing_period["to"] %> </td>
            </tr>
        </tbody>
      </table>
    </div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">     <h3>Your subscriptions</h3> </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Media</th>
            <th>Package</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @bill.subscriptions.each do |subscription| %>
          <tr>
            <td><%= subscription["type"].capitalize %></td>
            <td><%= subscription["name"] %></td>
            <td>£<%= "%.02f" % subscription["cost"] %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
<div class="row">
  <div class="col-md-8"></div>
  <div class="col-md-4">
    <table class="table table-hover">
      <tbody>
          <tr>
            <th>Subtotal: </th>
              <td> £<%= @bill.subscription_total %> </td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12"> <h3>Call charges</h3> </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Called</th>
            <th>Duration</th>
            <th>Cost</th>
          </tr>
        </thead>
        <tbody>
          <% @bill.call_charges.each do |call| %>
          <tr>
            <td><%= call["called"] %></td>
            <td><%= call["duration"] %></td>
            <td>£<%= "%.02f" % call["cost"] %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
<div class="row">
  <div class="col-md-8"></div>
  <div class="col-md-4">
    <table class="table table-hover">
      <tbody>
          <tr>
            <th>Subtotal: </th>
              <td> £<%= @bill.call_charges_total %> </td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12"> <h3>SkyStore purchases</h3> </div>
  </div>
  <div class="row">
    <div class="col-md-12"> <h4>Rentals</h3> </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Cost</th>
          </tr>
        </thead>
        <tbody>
          <% @bill.rentals.each do |rental| %>
          <tr>
            <td><%= rental["title"] %></td>
            <td>£<%= "%.02f" % rental["cost"] %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
<div class="row">
  <div class="col-md-12"> <h4>Buy And Keep</h3> </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Cost</th>
        </tr>
      </thead>
      <tbody>
        <% @bill.buy_and_keep.each do |purchase| %>
        <tr>
          <td><%= purchase["title"] %></td>
          <td>£<%= "%.02f" % purchase["cost"] %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-8"></div>
  <div class="col-md-4">
    <table class="table table-hover">
      <tbody>
          <tr>
            <th>Subtotal: </th>
              <td> £<%= @bill.sky_store_total %> </td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
</div>



  </body>
